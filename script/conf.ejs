const express = require('express');
const app = express();

// Configura o EJS como a engine de templates
app.set('view engine', 'ejs');

// Configura o diretório onde os templates estão localizados
app.set('views', './views');

// Rota exemplo
app.get('/', (req, res) => {
    res.render('index', { title: 'Minha Página EJS', message: 'Olá, mundo!' });
});

// Inicia o servidor
app.listen(8080, () => {
    console.log('Servidor rodando na porta 8080');
});
